gemspec
gem 'jekyll-include-cache'
source "https://rubygems.org"

# Jekyll dependency (version 4.2 for livereload support)
gem "jekyll", "~> 4.2"

# Instead of using the bundled github-pages gem (which pins Jekyll to 3.x), 
# add any individual plugins you need. For example:
gem "jekyll-include-cache", group: :jekyll_plugins

# Windows-specific dependencies for timezone support and file monitoring
gem "tzinfo-data", platforms: [:mingw, :mswin, :x64_mingw, :jruby]
gem "wdm", ">= 0.1.0", platforms: [:mingw, :mswin, :x64_mingw]

# Networking and request retry handling
gem "faraday-retry", "~> 2.3"
gem "kramdown-parser-gfm"
